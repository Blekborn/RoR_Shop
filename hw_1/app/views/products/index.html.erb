<div class="container" style="margin-bottom: 300px">
  <div class="row">
    <div class="col-lg-3">

      <%= render "categories/categories" %>
      <br>
      <%= form_tag products_path, method: :get do %>
        <div class="price">
          <%= text_field_tag :min_price, nil, class: 'price-form form-control', placeholder: 'Min' %>
          <br>
          <%= text_field_tag :max_price, nil, class: 'price-form form-control', placeholder: 'Max' %>
          <br>
          <%= submit_tag 'Find', class: 'btn btn-outline-dark shadow-non' %>
      <% end %>
      </div>

    </div>
    <div class="col-lg-9">
      <div class="row">
        <div class="col-lg-4 col-md-6 mb-4 pretty">
          <div class="card-body">
            <h4 class="card-title">
              <%= sortable "title" %> <%= sortable "price" %>
            </h4>
          </div>
        </div>
        <div class="col-lg-4 col-md-6 mb-4">
          <div class="card-body">
            <h4 class="card-title">
            </h4>
          </div>
        </div>
        <div class="col-lg-4 col-md-6 mb-4">
          <div class="card-body">
            <h4 class="card-title">
            </h4>
          </div>
        </div>
        <% @products.each do |product| %>
          <div class="col-lg-4 col-md-6 mb-4">
            <div class="card h-100">
              <% if product.photo.present? %>
                <p><%= image_tag product.photo.url, width: 253, height: 260 %></p>
              <% end %>
              <div class="card-body">
                <h4 class="card-title">
                  <%= product.title %>
                </h4>
                <h5><%= product.price %></h5>
                <p class="card-text"><%= product.description %></p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="row justify-content-center align-items-center">
    <div class="col col-sm-6 col-md-6 col-lg-4 col-xl-3">
      <%= will_paginate @product, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
    </div>
  </div>
</div>
