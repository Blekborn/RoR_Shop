<div class="p-4 p-md-0 mb-4">
  <div class="px-0 p-4">
    <h1 class="display-4 font-italic text-center">Show Product</h1>
  </div>
</div>
<div class="container">
  <div class="col-md-12">
    <div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
      <div class="col p-4 d-flex flex-column position-static">
        <h3 class="mb-0"><%= @product.title %></h3>
        <%= link_to "Info product", "#pictureModal_#{@product.id}", "data-toggle" => "collapse" %>
        <div class="collapse in" id="pictureModal_<%= @product.id %>">
          <p class="card-text mb-auto" style="width: 58%;"><%= @product.description %></p>
        </div>
<!--        <p class="card-text mb-auto" style="width: 58%;"><%#= @product.description %></p>-->
        <h3 class="mb-0"><%= number_to_currency(@product.price, :locale => :uk) %></h3>
        <div class="mb-0">
          <% if @product.rating.blank? %>
          <% else %>
            <%= render_stars(@product.rating) %>
          <% end %>
        </div>
      </div>
      <div class="col-auto d-none d-lg-block">
        <%= image_tag @product.image_url(:thumb).to_s %>
      </div>
    </div>
  </div>
  <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-chat-fill" viewBox="0 1 16 16">
    <path d="M8 15c4.418 0 8-3.134 8-7s-3.582-7-8-7-8 3.134-8 7c0 1.76.743 3.37 1.97 4.6-.097 1.016-.417 2.13-.771 2.966-.079.186.074.394.273.362 2.256-.37 3.597-.938 4.18-1.234A9.06 9.06 0 0 0 8 15z"/>
  </svg>
  <span class="badge" style="font-size: 1rem;"><%= @product.comments.count %></span>
  <br>
  <section class="section comments">
    <div class="container">
      <%= render 'comments/comment' %>
      <div class="comment-form">
        <% if user_signed_in? %>
          <h3 class="subtitle is-3">Leave a reply</h3>
          <%= render 'comments/form' %>
        <% end %>
      </div>
    </div>
  </section>
  <br>
  <%= link_to 'Back', products_path, :class => "btn btn-outline-dark shadow-none" %>
  <br>
  <span class="p-4"></span>
</div>