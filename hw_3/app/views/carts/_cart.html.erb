<% unless cart.line_items.empty? %>
  <div class="order-cart">
    <br>
    <div class="cart_title">Your Cart</div>
    <table style="font-size: 12px;">
      <%= render(cart.line_items) %>
      <tr class="total_line">
        <td colspan="2">Total</td>
        <td class="total_cell"><%= number_to_currency(cart.total_price, :locale => :uk) %></td>
      </tr>
    </table>
    <%#= button_to "Checkout", new_order_path, method: :get %>
    <br>
    <%= link_to 'Empty cart', cart, method: :delete,
                data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger shadow-non' %>
    <%= link_to "Checkout", new_order_path, method: :get, class: 'btn btn-outline-success shadow-non' %>
    <br>
    <br>
  </div>
<% end %>
